// класс колоды, в котором создается колода из 36 карт, в нем реализуются методы по выводу, перемешиванию, и раздаче колоды
package game;

import java.util.Random;

public class Deck {
    Card deck[] = new Card[36]; // создание массива колоды
	
    // конструктор
	public Deck()
	{
		for(int i = 0; i < deck.length; i++)
		{
			deck[i] = new Card(i);
		}
	}
	
	// получение колоды типа Card
	// колода типа Card
	public Card[] getDeck()
	{
		return deck;
	}
	
	
	// вывод всей колоды на экран
	public void print()
	{
		for(int i = 0; i < deck.length; i++)
		{
			deck[i].print();
		}
		System.out.println();
	}
	
	// перемешивание колоды
	public void mixing()
	{
		for(int i = 0; i < deck.length; i++)
		{
			Random r = new Random();
			int x = r.nextInt(deck.length); // рандомный индекс карты для замены
			Card a = deck[x];
			deck[x] = deck[i]; // 2 карты меняются местами
			deck[i] = a;
		}
	}
	
	public void razdacha(CardSequence frst_player, CardSequence scnd_player)
	{
		for (int i = 0; i < deck.length; i+=2)
		{
			deck[i].changeNext(i);
			frst_player.addCard(deck[i]);
			deck[i+1].changeNext(i+1);
			scnd_player.addCard(deck[i+1]);
		}
	}
}
