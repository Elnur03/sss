// класс карты, в котором создается карта и реализуются методы по изменению ее параметров, идентификации
package game;

public class Card {

    private int next;
    private int val;

    public Card(int v) {
        val = v; //номинал карты
        next = -1;
    }

    public int getVal() { //Метод для сравнения номиналов карт при самой игре
        return val%9;
    }

    public int getNext() { //Возвращает значение поля next, принимает его значение
        return next;
    }

    public void setNext(int n) { //Присваивает значение поля next
        next = n;
    }

    public void printCard() {
        switch(val/9) { //вызов значений
            case 0: System.out.print("♠"); break;
            case 1: System.out.print("♥"); break;
            case 2: System.out.print("♦"); break;
            case 3: System.out.print("♣"); break;
        }
        switch(val%9) {
            case 5: System.out.print("В "); break;
            case 6: System.out.print("Д "); break;
            case 7: System.out.print("К "); break;
            case 8: System.out.print("Т "); break;
            default: System.out.print(6 + val%9 + " "); break;
        }
    }




}
